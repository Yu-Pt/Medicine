<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hall"
    android:orientation="vertical"
    tools:context=".Wards">

    <Button
        android:id="@+id/wardsToHall"
        android:layout_width="40sp"
        android:layout_height="30sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/resurs_3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/wardsToW1"
        android:layout_width="110sp"
        android:layout_height="290sp"
        android:layout_marginTop="60sp"
        android:background="@android:color/transparent"
         />

    <Button
        android:id="@+id/wardsToW2"
        android:layout_width="60sp"
        android:layout_height="150sp"
        android:layout_marginStart="55sp"
        android:layout_marginTop="35sp"
        android:background="@android:color/transparent"
        />

        <Button
            android:id="@+id/wardsToAmb"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:layout_marginTop="30sp"
            android:layout_marginStart="85sp"
            android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/wardsToVip"
        android:layout_width="60sp"
        android:layout_height="150sp"
        android:background="@android:color/transparent"
        android:layout_marginStart="90sp"
        android:layout_marginTop="30sp"/>



    <Button
        android:id="@+id/wardsToRes"
        android:layout_width="100sp"
        android:layout_height="280sp"
        android:background="@android:color/transparent"
        android:layout_marginStart="60sp"
        android:layout_marginTop="50sp"/>

    </LinearLayout>

</LinearLayout>