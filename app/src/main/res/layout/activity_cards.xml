<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_1"
    android:orientation="vertical"
    tools:context=".Cards">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65sp"
        android:layout_marginTop="20sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_avatar"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginTop="30sp"
                android:layout_marginStart="15sp"
                android:background="@drawable/female1" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp">

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя Фамилия"
                android:layout_marginTop="43sp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="пол"
                android:textSize="16sp"
                android:layout_marginTop="80sp"/>

        </FrameLayout>

    </LinearLayout>

        <TextView
            android:id="@+id/card_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_marginStart="35sp"
            android:textSize="16sp"
            android:text="Адрес" />

    </LinearLayout>

        <FrameLayout
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90sp">

        <TextView
            android:id="@+id/card_symp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="симптом"
            android:layout_marginTop="65sp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/card_diag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="диагноз"
            android:textSize="16sp"
            android:layout_marginTop="110sp" />

            <TextView
                android:id="@+id/card_ward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="палата"
                android:textSize="16sp"
                android:layout_marginTop="200sp" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cardsPrev"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:visibility="visible"
            android:background="@drawable/resurs_2"
            android:layout_marginStart="5sp"
            android:layout_gravity="left"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/cardsNext"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:visibility="visible"
            android:background="@drawable/resurs_1"
            android:layout_gravity="end"
            android:layout_marginEnd="5sp"/>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/cardsToBack"
        android:layout_width="40sp"
        android:layout_height="30sp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20sp"
        android:layout_marginStart="10sp"
        android:background="@drawable/resurs_3" />

</LinearLayout>