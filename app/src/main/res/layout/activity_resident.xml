<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ord"
    android:orientation="vertical"
    tools:context=".Resident">

    <Button
        android:id="@+id/toNewDay"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:backgroundTint="@color/buttons_menu"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="Пойти домой" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/previousPage"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:visibility="invisible"
        android:background="@drawable/resurs_2"
        android:layout_marginTop="140sp"
        android:layout_marginStart="120sp"/>

        <TextView
            android:id="@+id/spName"
            android:layout_width="150sp"
            android:layout_height="180sp"
            android:text="TextView"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="55sp"
            android:layout_marginStart="30sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="150sp"
            android:layout_height="180sp"
            android:orientation="vertical"
            android:layout_marginTop="70sp"
            android:layout_marginStart="20sp">

        <TextView
            android:id="@+id/spSymp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="TextView" />

        <TextView
            android:id="@+id/spType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="TextView" />

        </LinearLayout>

        <Button
            android:id="@+id/nextPage"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:visibility="visible"
            android:background="@drawable/resurs_1"
            android:layout_marginTop="140sp"
            android:layout_marginStart="25sp"/>

    </LinearLayout>


    <Button
        android:id="@+id/resToBack"
        android:layout_width="40sp"
        android:layout_height="30sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/resurs_3"/>
</LinearLayout>